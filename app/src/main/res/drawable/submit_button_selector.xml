<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="#DDDDDD">

    <item>
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <gradient
                            android:angle="0"
                            android:endColor="@color/colorButtonEndDisabled"
                            android:startColor="@color/colorButtonStartDisabled"
                            android:type="linear" />

                    <corners android:radius="@dimen/_4sdp" />
                    <padding
                            android:bottom="@dimen/_10sdp"
                            android:left="@dimen/_10sdp"
                            android:right="@dimen/_10sdp"
                            android:top="@dimen/_10sdp" />
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape>

                    <gradient
                            android:angle="0"
                            android:endColor="@color/colorButtonEndEnabled"
                            android:startColor="@color/colorButtonStartEnabled"
                            android:type="linear" />

                    <corners android:radius="@dimen/_4sdp" />

                    <padding
                            android:bottom="@dimen/_10sdp"
                            android:left="@dimen/_10sdp"
                            android:right="@dimen/_10sdp"
                            android:top="@dimen/_10sdp" />

                </shape>
            </item>

        </selector>
    </item>
</ripple>


